{
    "name": "eqcbot",
    "version": "1.0.0",
    "private": false,
    "description": "Equichain Private Key Bot",
    "author": "Olivier Kobialka",
    "license": "ISC",
    "homepage": "https://spotkeybot-eda057ce5cb4.herokuapp.com/",
    "keywords": [
        "probot",
        "github",
        "probot-app"
    ],
    "scripts": {
        "build": "tsc",
        "start": "probot run ./lib/index.js",
        "test": "jest",
        "fmt": "npm run build && npx prettier --write . && npm run eslint -- --fix",
        "dev": "npm run build && npm run start",
        "eslint": "eslint --ext .ts ."
    },
    "commitlint": {
        "rules": {
            "references-empty": [
                2,
                "never"
            ]
        },
        "parserPreset": {
            "parserOpts": {
                "issuePrefixes": [
                    "EQC-"
                ]
            }
        }
    },
    "dependencies": {
        "probot": "^12.2.4"
    },
    "devDependencies": {
        "@probot/adapter-aws-lambda-serverless": "^3.0.4",
        "@probot/adapter-github-actions": "^3.1.3",
        "@types/jest": "^29.5.11",
        "@types/mocha": "^10.0.6",
        "@types/node": "^18.0.0",
        "@typescript-eslint/eslint-plugin": "^6.15.0",
        "@typescript-eslint/parser": "^6.15.0",
        "dotenv": "^16.3.1",
        "eslint": "^8.56.0",
        "jest": "^29.0.0",
        "nock": "^13.0.5",
        "prettier": "^3.1.1",
        "smee-client": "^2.0.1",
        "ts-jest": "^29.0.0",
        "typescript": "^4.1.3"
    }
}
